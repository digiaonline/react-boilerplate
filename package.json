{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for our React applications",
  "main": "src/index.js",
  "author": "Christoffer Niska <christofferniska@gmail.com>",
  "license": "MIT",
  "scripts": {
    "ci": "npm-run-all flow lint-staged test:coverage",
    "compile": "webpack -p --bail --config webpack/production.babel.js",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "flow-typed": "flow-typed install",
    "lint": "eslint src webpack --fix",
    "lint-staged": "lint-staged",
    "precommit": "lint-staged",
    "prepush": "yarn run ci",
    "start": "webpack-dashboard -c \"#0078af\" -- webpack-dev-server --config webpack/development.babel.js",
    "test": "mocha --compilers js:babel-core/register --require ignore-styles src/test.js --recursive \"src/**/*spec.js\"",
    "test:coverage": "istanbul cover _mocha -- --compilers js:babel-core/register --require ignore-styles src/test.js --recursive \"src/**/*spec.js\"",
    "test:coverage-html": "yarn run test:coverage -- --report html",
    "test:watch": "yarn run test -- --watch --reporter min"
  },
  "dependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "babel-register": "^6.18.0",
    "clean-webpack-plugin": "^0.1.14",
    "css-loader": "^0.26.1",
    "dotenv": "^2.0.0",
    "eslint": "^3.12.2",
    "eslint-plugin-flowtype": "^2.30.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.24.1",
    "lint-staged": "^3.4.0",
    "lodash": "^4.17.2",
    "normalize.css": "^5.0.0",
    "offline-plugin": "^4.5.3",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.3.0",
    "postcss-units": "^1.1.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-actions": "^1.2.1",
    "redux-saga": "^0.13.0",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.1",
    "webpack-merge": "^1.1.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-enzyme": "^0.6.1",
    "chai-jsx": "^1.0.1",
    "cheerio": "^0.22.0",
    "codeclimate-test-reporter": "^0.4.1",
    "enzyme": "^2.6.0",
    "eslint-plugin-react": "^6.8.0",
    "flow-bin": "^0.37.0",
    "flow-typed": "^2.0.0",
    "husky": "^0.12.0",
    "ignore-styles": "^5.0.1",
    "imports-loader": "^0.7.0",
    "istanbul": "1.0.0-alpha.2",
    "mocha": "^3.2.0",
    "npm-run-all": "^3.1.2",
    "react-addons-test-utils": "^15.4.1",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "webpack-dashboard": "^0.2.0",
    "webpack-dev-server": "^2.3.0",
    "webpack-hot-middleware": "^2.13.2"
  }
}
